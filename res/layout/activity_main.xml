<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:textSize="42sp"
         >

        <TableRow>
			
            <EditText
                android:id="@+id/result"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:background="@android:drawable/editbox_background"
                android:cursorVisible="false"
                android:editable="false"
                android:gravity="right|center_vertical"
                android:lines="1"
                android:textSize="48sp" 
                android:maxLength="12"/>
        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:textSize="42sp" 
                >

                <Button
                    android:id="@+id/num7"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="7"
                    android:textSize="42sp" 
                    android:background="@drawable/btnselector"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/num8"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="8"
                    android:textSize="42sp" 
                    android:background="@drawable/btnselector"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/num9"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="9"
                    android:textSize="42sp" 
                    android:background="@drawable/btnselector"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/divide"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="/"
                    android:textSize="42sp" 
                    android:layout_margin="3dp"
                    android:background="@drawable/btnselector2"/>
            </LinearLayout>
        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:textSize="42sp"
                 >

                <Button
                    android:id="@+id/num4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4"
                    android:textSize="42sp" 
                    android:background="@drawable/btnselector"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/num5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5"
                    android:textSize="42sp"
                    android:background="@drawable/btnselector"
                    android:layout_margin="3dp" />

                <Button
                    android:id="@+id/num6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="6"
                    android:textSize="42sp" 
                    android:background="@drawable/btnselector"
                    android:layout_margin="3dp"/>
                

                <Button
                    android:id="@+id/multiply"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="*"
                    android:textSize="42sp" 
                    android:layout_margin="3dp"
                    android:background="@drawable/btnselector2"/>
            </LinearLayout>
        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:textSize="42sp" 
               >

                <Button
                    android:id="@+id/num1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1"
                    android:textSize="42sp" 
                    android:background="@drawable/btnselector"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/num2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2"
                    android:textSize="42sp" 
                    android:background="@drawable/btnselector"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/num3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3"
                    android:textSize="42sp" 
                    android:background="@drawable/btnselector"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/subtract"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:textSize="42sp" 
                    android:layout_margin="3dp"
                    android:background="@drawable/btnselector2"/>
            </LinearLayout>
        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:textSize="42sp" 
                >

                <Button
                    android:id="@+id/num0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="42sp" 
                     android:background="@drawable/btnselector"
                     android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/point"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="."
                    android:textSize="42sp" 
                    android:layout_margin="3dp"
                    android:background="@drawable/btnselector2"/>

                <Button
                    android:id="@+id/add"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+"
                    android:textSize="42sp"
                    android:layout_margin="3dp" 
                    android:background="@drawable/btnselector2"/>

                <Button
                    android:id="@+id/equal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="="
                    android:textSize="42sp" 
                    android:layout_margin="3dp"
                    android:background="@drawable/btnselector2"/>
            </LinearLayout>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/clear"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:gravity="center_vertical|center_horizontal"
                android:text="clear"
                android:textSize="30sp"
                android:layout_margin="3dp"
                android:background="@drawable/btnselector2" />
        </TableRow>
        
        <TableRow>

            <Button
                android:id="@+id/switchmode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:gravity="center_vertical|center_horizontal"
                android:text="switch"
                android:textSize="30sp" 
                android:layout_margin="3dp"
                android:background="@drawable/btnselector2"/>
        </TableRow>
    </TableLayout>
    
    
    
   <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:textSize="42sp" 
        android:visibility="gone">
       <TableRow>

            <EditText
                android:id="@+id/result2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:background="@android:drawable/editbox_background"
                android:cursorVisible="false"
                android:editable="false"
                android:gravity="right|center_vertical"
                android:lines="1"
                android:textSize="48sp" />
      
          
      </TableRow>
       
      <TableRow>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:textSize="42sp" >

                <Button
                    android:id="@+id/num27"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="7"
                    android:textSize="42sp" />

                <Button
                    android:id="@+id/num28"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="8"
                    android:textSize="42sp" />

                <Button
                    android:id="@+id/num29"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="9"
                    android:textSize="42sp" />

                <Button
                    android:id="@+id/sin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="sin"
                    android:textSize="40sp" />
            </LinearLayout>
     </TableRow> 
     
     <TableRow>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:textSize="42sp" >

                <Button
                    android:id="@+id/num24"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4"
                    android:textSize="42sp" />

                <Button
                    android:id="@+id/num25"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5"
                    android:textSize="42sp" />

                <Button
                    android:id="@+id/num26"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="6"
                    android:textSize="42sp" />

                <Button
                    android:id="@+id/cos"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="cos"
                    android:textSize="32sp" 
                    />
            </LinearLayout>
     </TableRow> 
     
       <TableRow>

            <Button
                android:id="@+id/switchmode2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:gravity="center_vertical|center_horizontal"
                android:text="switch"
                android:textSize="30sp" />
      </TableRow>
        
   </TableLayout>

</RelativeLayout>